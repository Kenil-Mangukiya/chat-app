########################################
# üåê DATABASE CONFIGURATION
########################################

# Full MongoDB connection URI (include username, password, and cluster URL)
# Example: mongodb+srv://username:password@cluster0.mongodb.net
MONGODB_URI=

# Name of your MongoDB database
DB_NAME=


########################################
# üìß EMAIL / SMTP CONFIGURATION
########################################

# SMTP email username (your email address)
EMAIL_USER=

# SMTP email password or app-specific password
EMAIL_PASS=

# SMTP host (e.g., smtp.gmail.com or your mail service host)
EMAIL_HOST=

# SMTP port (usually 465 for SSL or 587 for TLS)
EMAIL_PORT=

# Email service provider (e.g., gmail, outlook, sendgrid)
EMAIL_SERVICE=


########################################
# üîê AUTHENTICATION (NextAuth)
########################################

# Random secret key for NextAuth (use `openssl rand -base64 32` to generate)
NEXT_AUTH_SECRET=


########################################
# üîë GOOGLE AUTHENTICATION (OAuth)
########################################

# Google Client ID from Google Cloud Console
GOOGLE_CLIENT_ID=

# Google Client Secret from Google Cloud Console
GOOGLE_CLIENT_SECRET=


########################################
# ü§ñ AI / GEMINI API CONFIGURATION
########################################

# API key for Google Gemini AI (used for AI-powered features)
GEMINI_API_KEY=

########################################
# ‚òÅÔ∏è CLOUDINARY CONFIGURATION (File Uploads)
########################################

# Your Cloudinary cloud name (from Cloudinary dashboard)
CLOUDINARY_CLOUD_NAME=

# Cloudinary API key (from Cloudinary dashboard)
CLOUDINARY_API_KEY=

# Cloudinary API secret (keep this private)
CLOUDINARY_API_SECRET=


########################################
# ‚öôÔ∏è ENVIRONMENT SETTINGS
########################################

# Set environment mode: development | production
NODE_ENV=development
